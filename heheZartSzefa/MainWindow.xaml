<Window x:Class="heheZartSzefa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:heheZartSzefa"
        mc:Ignorable="d"
		ResizeMode="NoResize"
        Title="MainWindow" Height="350" Width="600">
	<Canvas x:Name="kanwas">
		<TextBlock FontSize="36" Padding="30" x:Name="tekst" Canvas.Left="90">Czy chcesz powyżkę?</TextBlock>
		<Label Content="{Binding x}" Canvas.Right="0"/>
		<Button Width="111" Height="55" FontSize="28" Canvas.Left="80" Canvas.Top="180" Click="Button_Click">Nie</Button>
		<Button x:Name="tak" Width="111" Height="55" FontSize="28" Canvas.Right="80" Canvas.Top="180" MouseEnter="Button_MouseEnter" >Tak</Button>
    </Canvas>
</Window>
