<Window x:Class="bindowanie_dalej.cos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bindowanie_dalej"
        mc:Ignorable="d"
        Title="cos" Height="450" Width="800">
    <StackPanel>
        <RadioButton GroupName="stylradio" Content="italic"/>
        <RadioButton GroupName="stylradio" Content="normal"/>
        <RadioButton GroupName="stylradio" Content="oblique"/>
        <TextBlock FontStyle="{Binding Path=Content, ElementName=radioButton}">Tekst do formatowania</TextBlock>
    </StackPanel>
</Window>
